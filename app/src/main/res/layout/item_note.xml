<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="4dp"
		app:cardElevation="4dp"
		android:layout_margin="8dp"
		android:clickable="true"
		android:focusable="true">
	<android.support.constraint.ConstraintLayout
			android:id="@+id/note_item"
			android:layout_width="match_parent"
			android:background="?android:attr/selectableItemBackground"
			android:layout_height="wrap_content">
		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/ic_assignment_black_24dp"
				android:id="@+id/imageView"
				android:layout_marginBottom="8dp"
				app:layout_constraintBottom_toBottomOf="@+id/txt_note_course"
				android:layout_marginTop="8dp"
				app:layout_constraintTop_toTopOf="@+id/txt_note"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_marginStart="8dp"/>
		<TextView
				android:id="@+id/txt_note"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				tools:text="Note Text"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/imageView"
				android:layout_marginStart="8dp"
				android:textAppearance="@style/CourseTitle"/>
		<TextView
				android:id="@+id/txt_note_course"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="Course"
				android:layout_marginTop="8dp"
				app:layout_constraintStart_toStartOf="@+id/txt_note"
				app:layout_constraintTop_toBottomOf="@+id/txt_note"
				app:layout_constraintBottom_toBottomOf="parent"
				android:layout_marginBottom="8dp"/>
	</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>