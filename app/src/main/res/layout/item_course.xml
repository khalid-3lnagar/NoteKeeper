<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="4dp"
		app:cardElevation="4dp"
		android:layout_margin="8dp"
		android:clickable="true"
		android:focusable="true">
	<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/course_item"
			android:layout_width="match_parent"
			android:padding="8dp"
			android:background="?android:attr/selectableItemBackground"
			android:layout_height="wrap_content">

		<ImageView
				android:layout_width="19dp"
				android:layout_height="30dp"
				app:srcCompat="@drawable/ic_slideshow_black_24dp"
				android:id="@+id/imageView2"
				app:layout_constraintEnd_toEndOf="@+id/txt_note_course"
				app:layout_constraintStart_toStartOf="@+id/txt_note_course"
				app:layout_constraintHorizontal_bias="0.49"
				app:layout_constraintTop_toBottomOf="@+id/txt_note_course"
				app:layout_constraintBottom_toBottomOf="parent"
		/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/txt_note_course"
				tools:text="Course"
				android:textAlignment="center"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintTop_toTopOf="parent"
				android:textAppearance="@style/CourseTitle"
				app:layout_constraintVertical_bias="0.0"
				android:layout_marginTop="8dp"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"/>
	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>