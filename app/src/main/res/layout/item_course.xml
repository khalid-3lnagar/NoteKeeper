<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="4dp"
		app:cardElevation="4dp"
		android:layout_margin="8dp"
		android:clickable="true" android:focusable="true">
	<android.support.constraint.ConstraintLayout
			android:id="@+id/course_item"
			android:layout_width="match_parent"
			android:background="?android:attr/selectableItemBackground"
			android:layout_height="wrap_content">

		<ImageView
				android:layout_width="19dp"
				android:layout_height="30dp" app:srcCompat="@drawable/ic_slideshow_black_24dp"
				android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="@+id/txt_note_course"
				app:layout_constraintStart_toStartOf="@+id/txt_note_course"
				app:layout_constraintHorizontal_bias="0.49" android:layout_marginTop="8dp"
				app:layout_constraintTop_toBottomOf="@+id/txt_note_course"
				app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/txt_note_course"
				android:textAppearance="@style/TextAppearance.AppCompat.Medium"
				tools:text="Course"
				android:textStyle="bold" android:textAlignment="center"
				android:layout_marginStart="8dp"
				app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
				app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="8dp"
				android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
				android:textColor="@color/txt_color"/>
	</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>