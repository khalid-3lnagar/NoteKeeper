<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		package="khalid.elnagar.notekeeper">

	<uses-permission android:name="android.permission.VIBRATE" />

	<application
			android:allowBackup="true"
			android:icon="@mipmap/ic_launcher"
			android:label="@string/app_name"
			android:roundIcon="@mipmap/ic_launcher_round"
			android:supportsRtl="true"
			android:theme="@style/AppTheme">
		<activity
				android:name=".presentation.features.SettingsActivity"
				android:label="@string/settings"></activity>
		<activity
				android:name=".presentation.features.main_screen.MainActivity"
				android:label="@string/app_name"
				android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
				android:name=".presentation.features.NoteActivity"
				android:label="@string/add_note"
				android:parentActivityName=".presentation.features.main_screen.MainActivity"
				android:theme="@style/AppTheme.NoActionBar">
			<meta-data
					android:name="android.support.PARENT_ACTIVITY"
					android:value=".presentation.features.main_screen.MainActivity" />
		</activity>
	</application>

</manifest>